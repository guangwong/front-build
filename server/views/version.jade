extends layout

block content
  .container
    .row-fluid
      .span12
        .fb-title
          h1 
            a(href='/app?root=#{app.rootDir}')= app.name
            |/ 
            span= page.name
            |/
            sapn= page.version
          p.path= page.rootDir

          .buildto.form-inline
            .input-prepend
              |&nbsp;
              span.add-on
                i.icon-calendar
              input.timestamp-input(type='text')
              |&nbsp;
              a.btn.fb-build-page(href='/build-page/#{page.name}@#{page.version}?root=#{app.rootDir}')
                |Build            
              span.status

        #reports
        ul.timestamps
          - each ts in timestamps
            li 
              span.timestamp #{ts.timestamp}
              - if(ts.build)
                span.build-version from #{ts.build.build_version}
                span.build-time 用时 #{ts.build.build_used_time}ms
  script
    KISSY.use('page/index');